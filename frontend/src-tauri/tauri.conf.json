{
  "$schema": "https://raw.githubusercontent.com/nicegui/tauri/v2/tooling/cli/schema.json",
  "productName": "EVE Flipper",
  "version": "2.0.0",
  "identifier": "com.eveflipper.tool",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "EVE Flipper",
        "width": 1100,
        "height": 700,
        "minWidth": 900,
        "minHeight": 600,
        "alwaysOnTop": true,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/eve-flipper-backend"
    ]
  },
  "plugins": {
    "shell": {
      "sidecar": true
    }
  }
}
